<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_logo"
    tools:context=".dashboard">

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/explore_lanka"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="53dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBudget"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="fill"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/payment_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Notification"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGoals"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/hotel_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Hotel"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTasks"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/place_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Place"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearch"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/market_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Market Place"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvExit"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/payment_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Feedback"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile"
            android:layout_width="422dp"
            android:layout_height="85dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/account_24"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>