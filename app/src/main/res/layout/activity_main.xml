<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDC5C5"
    tools:context=".MainActivity">

    <RadioButton
        android:id="@+id/cardPay_RB"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:text="@string/card_payment_RB"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:id="@+id/tv_paymentMethod"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:background="#BD9F9F"
        android:paddingTop="10dp"
        android:text="@string/payment_method"
        android:textAlignment="center"
        android:textColor="#2C1B1B"
        android:textSize="24sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="14dp" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:backgroundTint="#BC9E9E"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/back_button"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/cardPay_btn"
        android:layout_width="373dp"
        android:layout_height="168dp"
        android:backgroundTint="#FEFEFE"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/card_payment_logo1"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/tv_cardPayment"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:text="@string/card_payment"
        android:textColor="#041B7E"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="122dp" />

    <RadioButton
        android:id="@+id/paypal_RB"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:text="@string/paypal_pay"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="531dp" />

    <ImageButton
        android:id="@+id/paypal_btn"
        android:layout_width="373dp"
        android:layout_height="168dp"
        android:backgroundTint="#FEFEFE"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/paypal_payment_logo_"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="351dp" />

</androidx.constraintlayout.widget.ConstraintLayout>